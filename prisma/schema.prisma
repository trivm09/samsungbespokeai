generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model User {
  id       String    @id
  name    String?
  email    String    @unique
  password String
  role     String    @default("user")
}

model Customer {
  id       String   @id @default(uuid())
  name     String
  email    String?  @default("")
  phone    String   @unique
  otp      String? @default("9999")
  journey1  Boolean? @default(false)
  journey2  Boolean?  @default(false)   
  journey3  Boolean?  @default(false)
  journey4  Boolean?  @default(false)
  gift1     Boolean?  @default(false)
  gift2     Boolean?  @default(false)
  createAt DateTime @default(now())
}



